<scpd xmlns="urn:schemas-upnp-org:service-1-0">
	<specVersion>
		<major>1</major>
		<minor>0</minor>
	</specVersion>
	<serviceStateTable>
		<stateVariable>
			<name>DeviceId</name>
			<sendEventsAttribute>no</sendEventsAttribute>
			<dataType>ui4</dataType>
		</stateVariable>
		<stateVariable>
			<name>OnLevel</name>
			<sendEventsAttribute>yes</sendEventsAttribute>
			<dataType>ui1</dataType>
		</stateVariable>
		<stateVariable>
			<name>OffLevel</name>
			<sendEventsAttribute>yes</sendEventsAttribute>
			<dataType>ui1</dataType>
		</stateVariable>
		<stateVariable>
			<name>AutoTimeout</name>
			<sendEventsAttribute>yes</sendEventsAttribute>
			<dataType>ui4</dataType>
		</stateVariable>
		<stateVariable>
			<name>ManualTimeout</name>
			<sendEventsAttribute>yes</sendEventsAttribute>
			<dataType>ui4</dataType>
		</stateVariable>
		<stateVariable>
			<name>SensorIds</name>
			<sendEventsAttribute>yes</sendEventsAttribute>
			<dataType>string</dataType>
		</stateVariable>
		<stateVariable>
			<name>Mode</name>
			<sendEventsAttribute>yes</sendEventsAttribute>
			<dataType>string</dataType>
		</stateVariable>
		<stateVariable>
			<name>Timeout</name>
			<sendEventsAttribute>yes</sendEventsAttribute>
			<dataType>string</dataType>
		</stateVariable>
		<stateVariable>
			<name>Level</name>
			<sendEventsAttribute>yes</sendEventsAttribute>
			<dataType>ui1</dataType>
		</stateVariable>
	</serviceStateTable>
	<actionList>
		<action>
			<name>SetLevel</name>
			<argumentList>
				<argument>
					<name>NewLevel</name>
					<direction>in</direction>
					<relatedStateVariable>CurrentLevel</relatedStateVariable>
				</argument>
			</argumentList>
		</action>
		<action>
			<name>SetOnLevel</name>
			<argumentList>
				<argument>
					<name>NewLevel</name>
					<direction>in</direction>
					<relatedStateVariable>OnLevel</relatedStateVariable>
				</argument>
			</argumentList>
		</action>
		<action>
			<name>SetOffLevel</name>
			<argumentList>
				<argument>
					<name>NewLevel</name>
					<direction>in</direction>
					<relatedStateVariable>OffLevel</relatedStateVariable>
				</argument>
			</argumentList>
		</action>
		<action>
			<name>SetAutoTimeout</name>
			<argumentList>
				<argument>
					<name>NewTimeout</name>
					<direction>in</direction>
					<relatedStateVariable>AutoTimeout</relatedStateVariable>
				</argument>
			</argumentList>
		</action>
		<action>
			<name>SetManualTimeout</name>
			<argumentList>
				<argument>
					<name>NewTimeout</name>
					<direction>in</direction>
					<relatedStateVariable>ManualTimeout</relatedStateVariable>
				</argument>
			</argumentList>
		</action>
	</actionList>
</scpd>